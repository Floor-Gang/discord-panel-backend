{
    "env": {
        "browser": true,
        "node": true,
        "es2020": true
    },
    "extends": [
        "airbnb-base"
    ],
    "ecmaFeatures": {
        "modules": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": 0
    },
    "ignorePatterns": [ "dist/**/*" ]
}
